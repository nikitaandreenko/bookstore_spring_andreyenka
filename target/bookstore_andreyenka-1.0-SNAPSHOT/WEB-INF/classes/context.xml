<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="com.company.dao.impl.UserDaoImpl">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="bookDao" class="com.company.dao.impl.BookDaoImpl">
        <constructor-arg ref="dataSource"/>
    </bean>
    <bean id="bookService" class="com.company.service.impl.BookServiceImpl">
        <constructor-arg ref="bookDao"/>
    </bean>
    <bean id="userService" class="com.company.service.impl.UserServiceImpl">
        <constructor-arg ref="userDao"/>
    </bean>
    <bean id="book" class="com.company.controller.command.impl.book.BookCommand">
        <constructor-arg ref="bookService"/>
    </bean>
    <bean id="all_books" class="com.company.controller.command.impl.book.AllBookCommand">
        <constructor-arg ref="bookService"/>
    </bean>
    <bean id="all_users" class="com.company.controller.command.impl.user.AllUserCommand">
        <constructor-arg ref="userService"/>
    </bean>
    <bean id="user" class="com.company.controller.command.impl.user.UserCommand">
        <constructor-arg ref="userService"/>
    </bean>
    <bean id="create_user" class="com.company.controller.command.impl.user.CreateUserCommand">
        <constructor-arg ref="userService"/>
    </bean>
    <bean id="error" class="com.company.controller.command.impl.error.ErrorCommand"/>

    <bean id="dataSource" class="com.company.dao.connection.DateSourÑe"/>

</beans>